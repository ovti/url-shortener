{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.url_list'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.url_list'|trans }}</h1>
    <p>
        <a href="{{ url('url_create') }}" class="btn btn-primary">
            {{ 'action.create'|trans }}
        </a>
    </p>
    {% if pagination is defined and pagination.items|length %}

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>


        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'label.id'|trans, 'url.id') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.long_url'|trans, 'url.long_url') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.short_url'|trans, 'url.short_url') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.create_time'|trans, 'url.create_time') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.is_blocked'|trans, 'url.is_blocked') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.block_expiration'|trans, 'url.block_expiration') }}</th>
                <th>{{ 'label.tag'|trans }}</th>
                <th>{{ 'label.actions'|trans }}</th>
                <th>{{ 'title.url_edit'|trans }}</th>
                <th>{{ 'title.url_delete'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for url in pagination.items %}
                <tr>
                    <td>{{ url.id }}</td>
                    <td>{{ url.longUrl }}</td>
                    <td>{{ url.shortUrl }}</td>
                    <td>{{ url.createTime|format_date('long') }}</td>
                    <td>{{ url.isBlocked ? 'Yes' : 'No' }}</td>
                    <td>{{ url.blockExpiration ? url.blockExpiration|date('Y/m/d') : '' }}</td>
                    <td>
                        {% if url.tags is defined and url.tags|length %}
                            {% for tag in url.tags %}
                                <a href="{{ url('url_list', {'filters.tag_id' : tag.id}) }}" title="{{ tag.name }}">
                                    {{ tag.name }}
                                </a>
                            {% endfor %}
                        {% else %}
                            &nbsp;
                        {% endif %}
                    </td>
{#                    {% if is_granted('VIEW', url) %}#}
                        <td>
                            <a class="btn btn-outline-primary" href="{{ url('url_show', {id: url.id}) }}" title="{{ 'action.show'|trans }}">
                                {{ 'action.show'|trans }}
                            </a>
                        </td>
{#                    {% endif %}#}
                    {% if is_granted('EDIT', url) %}
                        <td>
                            <a class="btn btn-outline-success" href="{{ url('url_edit', {id: url.id}) }}" title="{{ 'action.edit'|trans }}">
                                {{ 'action.edit'|trans }}
                            </a>
                        </td>
                    {% endif %}
                    {% if is_granted('DELETE', url) %}
                        <td>
                            <a class="btn btn-outline-danger" href="{{ url('url_delete', {id: url.id}) }}" title="{{ 'action.delete'|trans }}">
                                {{ 'action.delete'|trans }}
                            </a>
                        </td>
                    {% endif %}
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

    {% else %}
        <p>
            {% include 'default/_single_alert_message.html.twig' with {
                type: 'warning',
                message: 'message.empty_list'|trans
            } %}
        </p>
    {% endif %}
{% endblock %}