{% extends 'base.html.twig' %}

{% block title %}
        {{ 'title.popular_urls'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.popular_urls'|trans }}</h1>
    <table class="table">
        <thead>
            <tr>
                <th>{{ 'label.count'|trans }}</th>
                <th>{{ 'label.url'|trans }}</th>
            </tr>
        </thead>
        <tbody>
            {% for urlVisited in urlsVisited %}
                <tr>
                    <td>{{ urlVisited.visits }}</td>
                    <td>{{ urlVisited.longUrl }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}